{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
<h1>Votre panier</h1>
<div class="container">

	{% if items %}

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Produit</th>
					<th scope="col">Prix</th>
					<th scope="col">Quantité</th>
					<th scope="col">Total</th>
                    <th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}

					<tr class="table-success">
						<td><img src="{{ asset('uploads/photos/' ~ item.product.photo) }}" alt="" width="50"></td>
						<td>{{ item.product.prix }}</td>
						<td>{{ item.quantity }}</td>
						<td>{{ item.product.prix * item.quantity }}
							€</td>
						<td>
							<a href="{{ path('suppression_panier', {id: item.product.id })}}" class="btn sm btn-danger"><i class="bi bi-trash3"></i></a>
						</td>
					</tr>

				{% endfor %}
			</tbody>
		</table>

		<tfoot>
			<tr>
				<td colspan="3">Total</td>
				<td colspan="2">{{total}}€</td>
			</tr>
		</tfoot>

	</table>

{% else %}
	<h2 class="text-center mt-5">vide</h2>
</div>



{% endif %}
<div class="text-end">
    <button type="button" class="btn btn-primary mb-1 mt-5">Valider mon panier</button>	
</div>

{% endblock %}
