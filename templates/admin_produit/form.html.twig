{% extends "base.html.twig" %}

{% block title %}
	{% if editMode %}
		Modifier
	{% else %}
		Ajouter
	{% endif %}
{% endblock %}


{% block body %}
<h1 class="text-center my-4">
	{% if editMode %}
		Modifier
	{% else %}
		Ajouter
	{% endif %}
	un produit</h1>


<div class="container">
	{{ form_start(form, {
            attr: { novalidate: "novalidate"}
        })}}
	{{form_row(form.titre) }}
	{{form_row(form.description) }}
	{{form_row(form.couleur) }}
	{{form_row(form.collection) }}
	{{form_row(form.photo) }}
	{{form_row(form.prix) }}
	{{form_row(form.stock) }}

	{{ form_end(form)}}
</div>
{% endblock %}