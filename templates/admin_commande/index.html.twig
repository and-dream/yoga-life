{% extends 'base.html.twig' %}

{% block title %}Gestion Commandes
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Gestion Commandes</h1>
		<table class="table table-hover">
			<thead>
				<tr>
                {% for data in tab %}
                  {% if data != "id" %}
						<th>{{ data }}</th>
					{% endif %}  
                {% endfor %}
					<th scope="col">Commande</th>
					<th scope="col">Membre</th>
					<th scope="col">Produit</th>
					<th scope="col">Actions</th>

				</tr>
			</thead>
			<tbody>
				{% for data in orders %}
				<tr class="table-active">
					<td>{{ data.id}}</td>
					<td>{{ data.dateEnregistrement|date('d/m/Y') }}</td>
					<td>{{ data.membre.pseudo}}</td>
					<td>{{ data.produit.titre}}</td>
					<td>{{ data.quantite}}</td>
					<td>{{ data.montant}}
						â‚¬</td>
					<td>{{ data.etat}}</td>
					<td>
						<a href="#">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a href="#">
							<i class="bi bi-trash3"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

</div>
{% endblock %}
